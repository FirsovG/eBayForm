<Window x:Class="eBayForm.Windows.StylesToolBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eBayForm.Windows"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:logicunits="clr-namespace:eBayForm.LogicUnits"
        mc:Ignorable="d" Height="600" Width="300"
        WindowStartupLocation="Manual"
        FontFamily="Popins" Background="{StaticResource AccentDark}"
        Foreground="AliceBlue"
        WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="xctk:ByteUpDown">
            <Setter Property="Foreground" Value="{StaticResource MainColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentDark}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" Name="Taskbar"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel  Name="spMain" Margin="0, 10, 0, 25">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
